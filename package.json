{
  "name": "complex-portfolio",
  "version": "1.0.0",
  "description": "complex portfolio web-site using all known technologies",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "watch:sass": "node-sass sass/login-page/main.scss login-page/resources/css/style.css -w",
    "devserver": "live-server",
    "start": "npm-run-all --parallel devserver watch:sass",
    
    "compile:sass": "node-sass sass/main.scss css/style.comp.css",
    "prefix:css": "postcss --use autoprefixer -b 'last 10 versions' css/style.concat.css -o css/style.prefix.css",
    "compress:css": "node-sass css/style.prefix.css css/style.css --output-style compressed",
    "build:css": "npm-run-all compile:sass concat:css prefix:css compress:css"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Javez/Complex-portfolio.git"
  },
  "keywords": [
    "complex",
    "portfolio"
  ],
  "author": "Oleksiy Danilov",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Javez/Complex-portfolio/issues"
  },
  "homepage": "https://github.com/Javez/Complex-portfolio#readme",
  "devDependencies": {
    "autoprefixer": "^10.4.14",
    "concat": "^1.0.3",
    "lite-server": "^2.6.1",
    "node-sass": "^8.0.0",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^10.1.0",
    "typescript": "^5.0.3"
  }
}
